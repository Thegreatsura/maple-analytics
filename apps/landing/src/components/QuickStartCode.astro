---
interface Props {
    steps: Array<{ title: string; code: string; language: string }>;
}

const { steps } = Astro.props;
---

<section class="py-16 md:py-24">
    <div class="mx-auto max-w-4xl px-6">
        <span class="text-[11px] text-accent uppercase tracking-wider">Quick start</span>
        <h2 class="mt-3 text-2xl md:text-3xl font-bold text-fg mb-12">Up and running in minutes</h2>

        <div class="space-y-8">
            {steps.map((step, index) => (
                <div class="flex gap-5">
                    <div class="shrink-0">
                        <div class="w-8 h-8 bg-accent flex items-center justify-center">
                            <span class="text-accent-foreground text-sm font-bold">{index + 1}</span>
                        </div>
                    </div>
                    <div class="flex-1 min-w-0">
                        <h3 class="text-base font-semibold text-fg mb-3">{step.title}</h3>
                        <div class="bg-bg-elevated border border-border overflow-hidden">
                            <div class="flex items-center gap-2 px-4 py-3 border-b border-border">
                                <div class="w-2 h-2 bg-border"></div>
                                <div class="w-2 h-2 bg-border"></div>
                                <div class="w-2 h-2 bg-border"></div>
                                <span class="text-[9px] text-fg-muted ml-2">{step.language}</span>
                            </div>
                            <pre class="p-4 overflow-x-auto"><code class="font-mono text-[13px] text-fg-muted whitespace-pre">{step.code}</code></pre>
                        </div>
                    </div>
                </div>
            ))}
        </div>
    </div>
</section>
