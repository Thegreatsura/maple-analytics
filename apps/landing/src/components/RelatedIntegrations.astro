---
interface Props {
    current: string;
}

const { current } = Astro.props;

const integrations = [
    { slug: "nextjs", label: "Next.js", description: "Auto-instrument your Next.js app with zero config" },
    { slug: "python", label: "Python", description: "Trace Django, Flask, and FastAPI services" },
    { slug: "nodejs", label: "Node.js", description: "Full-stack observability for Node.js backends" },
];

const filtered = integrations.filter(i => i.slug !== current).slice(0, 3);
---

<section class="py-24 md:py-32">
    <div class="mx-auto max-w-6xl px-6">
        <span class="text-[11px] text-accent uppercase tracking-wider">Explore more</span>
        <h2 class="mt-3 text-2xl md:text-3xl font-bold text-fg mb-12">Other integrations</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-px bg-border border border-border">
            {filtered.map(i => (
                <a href={`/integrations/${i.slug}`} class="bg-bg p-6 md:p-8 hover:bg-muted/10 transition-colors group">
                    <h3 class="text-base font-semibold text-fg mb-2 group-hover:text-accent transition-colors">{i.label}</h3>
                    <p class="text-sm text-fg-muted leading-relaxed">{i.description}</p>
                    <span class="mt-4 inline-block text-xs text-accent">Learn more &rarr;</span>
                </a>
            ))}
        </div>
    </div>
</section>
